<?xml version="1.0"?>
<project name="runner">
  <loadproperties srcFile="secure.properties" />

  <!-- quick check on runner.dir -->
  <fail
          message="runner.dir is missing. Make sure to inject it through an env var"
          unless="runner.dir"
  />

  <import file="${runner.dir}/build.xml" />

  <target name="test">
    <subant>
      <fileset dir="test" includes="build.xml" />
      <target name="clean" />
      <target name="debug" />
      <target name="uninstall" />
      <target name="install" />
      <target name="test" />
    </subant>
  </target>
</project>
